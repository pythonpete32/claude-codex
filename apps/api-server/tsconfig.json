{
	"compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false,
		"paths": {
			"@claude-codex/core": ["../../packages/core/src/index.ts"],
			"@claude-codex/log-processor": [
				"../../packages/log-processor/src/index.ts"
			],
			"@claude-codex/types": ["../../packages/types/src/index.ts"],
			"@claude-codex/utils": ["../../packages/utils/src/index.ts"]
		}
	}
}
