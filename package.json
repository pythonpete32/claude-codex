{
  "name": "claude-codex",
  "version": "1.0.0",
  "description": "Automation scripts powered by Claude Code SDK",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "claude-codex": "./bin/claude-codex.js"
  },
  "exports": {
    ".": "./src/index.js",
    "./core": "./src/core/index.js",
    "./cli": "./src/cli/index.js"
  },
  "files": [
    "src/",
    "bin/",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node bin/claude-codex.js",
    "dev": "tsx src/index.ts",
    "format": "biome format --write .",
    "format:check": "biome format --check .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "lefthook install"
  },
  "keywords": [
    "claude",
    "automation",
    "ai",
    "scripts",
    "code-generation"
  ],
  "author": "abuusama",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/abuusama/claude-codex.git"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.4",
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "lefthook": "^1.11.14",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.31",
    "@reliverse/relinka": "^1.5.3",
    "picocolors": "^1.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
